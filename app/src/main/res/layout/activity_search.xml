<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".view.SearchActivity"
        android:id="@+id/constraintLayout">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scrollView"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".view.SearchActivity" android:id="@+id/innerConstraintLayout">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@drawable/rounded_form"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorHint"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/pokemonNameEditText" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/searchButton" android:hint="@string/searchEditText"/>
            <Button
                    android:text="@string/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/searchButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_form"
                    android:backgroundTint="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/pokemonNameEditText"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:background="@drawable/rounded_form"
                    android:layout_height="match_parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/pokemonNameEditText"
                    android:id="@+id/pokemonImageLinearLayout"
            >
                <ImageView
                        android:layout_height="wrap_content"
                        app:srcCompat="@color/colorPrimaryDark"
                        android:id="@+id/frontPokemonImageView"
                        android:layout_width="wrap_content"/>
                <ImageView
                        android:layout_height="wrap_content"
                        app:srcCompat="@color/colorPrimaryDark"
                        android:id="@+id/backPokemonImageView"
                        android:layout_width="wrap_content"/>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dataConstraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/pokemonImageLinearLayout"
                    android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                <android.support.v7.widget.RecyclerView

                        android:id="@+id/dataListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>